header {
  width: 100%;
  background-color: #FFF;
  height: 200px;
  position: fixed;
  top: 0; /* 固定する位置 */
  left: 0; /* 固定する位置 */
  right: 0;  /* 固定する位置 */
  z-index: 10;
  background:#ddd url(<%= asset_path "insta.jpg"%>) no-repeat center center;
  background-size:100% auto;
}

header h3,h2 {
 text-align: left;
}

header ul {
  margin: 0 auto;
  list-style: none;
  font-weight: bold;
}

header ul a {
  display: block;
  padding: 20px;
  text-decoration: none;
  color: white;
  text-size: 30px;
  border-radius: 20px;
  -webkit-text-stroke-color: #000;
  -webkit-text-stroke-width: 1px;
}


header ul a:hover {
　opacity: 0.5 ;

}

header li {
  float: left;
  width: auto;
}

.about-background {
  padding-bottom: 30%;
  width: 100%;
}

.about-background h1 {
  padding-top: 200px;
  margin: 20px;
  color:#000000;
  -webkit-text-stroke-color: #000;
  -webkit-text-stroke-width: 1px;
}

.about-background p {
  padding: 30px;
  margin: 30px;
  background-color: rgba(255,255,255,0.5);
  color:#000;
}



html {
  position: relative;
  min-height: 100%;
}

body {
  text-align: center;
  padding-bottom: 60px; 
  margin: auto;
}